{
    "manifest_version": 3,
    "name": "Every Game Poker Data Miner",
    "version": "1.0.2",
    "description": "Heads-up display for everygame.eu online poker",
    "homepage_url": "https://git.streetscrape.com/dan/everygame-poker-hud",
    "icons": {
        "120": "icon-120.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "permissions": [
        "webRequest",
        "activeTab"
    ],
    "action": {
        "default_icon": "icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "lib/socket-sniffer.js",
                "lib/jquery.min.js",
                "lib/jquery.modal.min.js",
                "lib/jquery.modal.min.css",
                "lib/modal.css"
            ],
            "matches": [
                "https://client.horizonpokernetwork.eu/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/syringe.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "host_permissions": [
        "https://client.horizonpokernetwork.eu/rweb/prod/v47/everygame/"
    ]
}