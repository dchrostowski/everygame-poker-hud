{
    "manifest_version": 3,
    "name": "Every Game Poker Data Miner",
    "version": "0.0.1",
    "description": "Saves poker hand data to local file for StockPokerOnline.com and RounderCasino.com",
    "homepage_url": "https://github.com/dchrostowski/poker_hand_recorder_stock_rounder",
    "icons": {
        "120": "icon-120.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "permissions": [
        "webRequest",
        "activeTab"
    ],
    "action": {
        "default_icon": "icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "lib/socket-sniffer.js"
            ],
            "matches": [
                "https://client.horizonpokernetwork.eu/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/syringe.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "host_permissions": [
        "https://client.horizonpokernetwork.eu/rweb/prod/v47/everygame/"
    ]
}